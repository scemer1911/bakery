<Page x:Class="Bakery.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавить пользователя">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Добавить пользователя" HorizontalAlignment="Center" Margin="0,0,0,25"/>
            <TextBlock Text="Имя пользователя"/>
            <TextBox x:Name="NameTextBox"/>
            <TextBlock Text="Логин"/>
            <TextBox x:Name="UsernameTextBox"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="PasswordBox"/>
            <TextBlock Text="Роль"/>
            <ComboBox x:Name="RoleComboBox">
                <ComboBoxItem>Администратор</ComboBoxItem>
                <ComboBoxItem>Пекарь</ComboBoxItem>
                <ComboBoxItem>Кладовщик</ComboBoxItem>
            </ComboBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Content="Добавить" Click="AddButton_Click" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
