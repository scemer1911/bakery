<Window x:Class="Bakery.OrderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали заказа" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Детали заказа" FontSize="20" FontWeight="Bold" Margin="10"/>

        <StackPanel Margin="10,50,10,10">
            <TextBlock Text="ID заказа:" />
            <TextBlock x:Name="OrderID" />
            <TextBlock Text="Дата:" />
            <TextBlock x:Name="OrderDate" />
            <TextBlock Text="Статус:" />
            <TextBlock x:Name="OrderStatus" />
            <TextBlock Text="Сумма:" />
            <TextBlock x:Name="OrderAmount" />
        </StackPanel>
    </Grid>
</Window>
